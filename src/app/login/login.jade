.col-md-2.login-logo
  img.hidden-sm.big-logo(src='app/assets/logo.png')
  img.hidden-md.hidden-lg.hidden-xs.small-logo.col-md-offset-2(src='app/assets/logo.png')
.col-md-4.col-md-offset-2.login-form
  h2 Login
  form(name='form', ng-submit='vm.authenticate(vm.username, vm.password)', role='form')
    .form-group(ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }")
      label(for='username') Username
      input#username.form-control(type='text', name='username', ng-model='vm.username', required='')
      span.help-block(ng-show='form.username.$dirty && form.username.$error.required') Username is required
    .form-group(ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }")
      label(for='password') Password
      input#password.form-control(type='password', name='password', ng-model='vm.password', required='')
      span.help-block(ng-show='form.password.$dirty && form.password.$error.required') Password is required
    .form-actions
      button.btn.btn-custom.round(type='submit') Login